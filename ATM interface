import java.util.Scanner;

public class ATMInterface {

    private static double balance = 1000; // Initial balance

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.println("Welcome to MyBank ATM");
        System.out.println("Please select an option:");
        System.out.println("1. Check Balance");
        System.out.println("2. Deposit Money");
        System.out.println("3. Withdraw Money");
        System.out.println("4. Exit");

        boolean quit = false;
        while (!quit) {
            System.out.print("\nEnter your choice: ");
            int choice = scanner.nextInt();

            switch (choice) {
                case 1:
                    checkBalance();
                    break;
                case 2:
                    depositMoney(scanner);
                    break;
                case 3:
                    withdrawMoney(scanner);
                    break;
                case 4:
                    quit = true;
                    System.out.println("Thank you for using MyBank ATM. Goodbye!");
                    break;
                default:
                    System.out.println("Invalid choice. Please enter a valid option.");
                    break;
            }
        }

        scanner.close();
    }

    public static void checkBalance() {
        System.out.println("Your current balance is: $" + balance);
    }

    public static void depositMoney(Scanner scanner) {
        System.out.print("Enter the amount to deposit: $");
        double amount = scanner.nextDouble();

        if (amount <= 0) {
            System.out.println("Invalid amount. Deposit amount must be greater than zero.");
        } else {
            balance += amount;
            System.out.println("Deposit of $" + amount + " successful.");
            System.out.println("Your updated balance is: $" + balance);
        }
    }

    public static void withdrawMoney(Scanner scanner) {
        System.out.print("Enter the amount to withdraw: $");
        double amount = scanner.nextDouble();

        if (amount <= 0) {
            System.out.println("Invalid amount. Withdrawal amount must be greater than zero.");
        } else if (amount > balance) {
            System.out.println("Insufficient balance. Your current balance is: $" + balance);
        } else {
            balance -= amount;
            System.out.println("Withdrawal of $" + amount + " successful.");
            System.out.println("Your updated balance is: $" + balance);
        }
    }
}
